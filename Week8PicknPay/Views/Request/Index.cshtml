
@model Request

<div style="display:flex; justify-content:center; margin:0 2rem;">
    <div>

        @using (Html.BeginForm("Reply", "Request"))
        {
            <div style="text-align:center">
                <h4 style="color:crimson;">Request Form</h4>
            </div>

            <div style="margin-bottom:2rem;" class="form-group">
                <label asp-for="Subject"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div style="margin-bottom:2rem;">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" style="height:15rem;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div style="margin-bottom:2rem; width: 100%;">
                <button type="submit" class="btn btn-primary" style="width: 100%;">Submit Request</button>
            </div>

            <p style="margin-top:2rem; text-align:center;">
                You can also send us an <email address="ajiemilo@gmail.com" content="email"></email>.
            </p>
        }
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
