@model Category

@using Week8PicknPay.Views.Product


<h1 style="color: #b61a4c; display: flex; justify-content: center; ">@(Model.CategoryName==null ? "ALL PRODUCTS" : Model.CategoryName.ToUpper())</h1>

<div class="row" style="padding: 0 1rem;">
    @(await Html.RenderComponentAsync<ProductList>(RenderMode.ServerPrerendered, new { CategoryName = Model.CategoryName}))
</div>
