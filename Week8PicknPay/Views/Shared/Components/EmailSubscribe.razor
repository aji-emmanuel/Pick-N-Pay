@using Microsoft.AspNetCore.Components.Web
@using System.ComponentModel.DataAnnotations;

<div class="subscribe-email">
    <h4><b>Want first Dibs?</b></h4>
    <div class="subscribe-email-intro">
        <p>Join our email list and be the first to know about new limited edition products, material innovations and lots of other fun updates.</p>
    </div>
    <div class="subscribe-email-form">
        <form>
            <input placeholder="Enter your email address" type="email" required />
            <button type="submit" class="btn btn-primary">SignUp</button>
        </form>
    </div>
    <div class="subscribe-email-intro">
        <p class="opt-out">Note: You can opt out at any time. See our <a href="#!">privacy policy and terms</a>.</p>
    </div>
</div>

@if (show)
{
    <div class="center-alert">
        <div class="alert-content rounded">
            <p class="alert-info">You've been successfully added to our mailing list!</p>
            <a class="alert-link" href="order/checkout">Ok</a>
        </div>
    </div>
}

@code {

    private bool show = false;

    protected void HandleSubmit()
    {
        show = true;
    }

}
